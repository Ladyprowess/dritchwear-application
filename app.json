{
  "expo": {
    "name": "Dritchwear",
    "slug": "dritchwear",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "dritchwear",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "androidStatusBar": {
      "barStyle": "dark-content",
      "backgroundColor": "#000000",
      "translucent": true
    },
    "androidNavigationBar": {
      "visible": "sticky-immersive",
      "backgroundColor": "#000000"
    },
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dritchwear.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload logos.",
        "NSPhotoLibraryAddUsageDescription": "This app needs access to save logos to your photo library.",
        "NSCameraUsageDescription": "This app needs camera access to allow you take product or logo photos.",
        "NSUserNotificationsUsageDescription": "Allow Dritchwear to send you notifications about your orders, promotions, and important updates."
      }
    },
    "android": {
      "package": "com.dritchwear.app",
      "versionCode": 80,
      "softwareKeyboardLayoutMode": "resize",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "NOTIFICATIONS",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_AUDIO",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "NOTIFICATIONS",
        "READ_MEDIA_IMAGES"
      ],
      "useNextNotificationsApi": true,
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      "expo-system-ui",
      "@react-native-community/datetimepicker",
      "expo-secure-store",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Dritchwear to access your photos to upload logos.",
          "savePhotosPermission": "Allow Dritchwear to save logos to your photo library.",
          "isAccessMediaLocationEnabled": false
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#7C3AED",
          "sounds": [],
          "mode": "production"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "minSdkVersion": 24,
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "a4790542-c5a5-49ed-9721-562bb575964d"
      },
      "EXPO_PUBLIC_PAYPAL_CLIENT_ID": "enabled"
    },
    "owner": "ladyprow",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/a4790542-c5a5-49ed-9721-562bb575964d"
    }
  }
}
